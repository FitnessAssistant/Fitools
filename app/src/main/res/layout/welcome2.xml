<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/jsd_sex_return_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/turn_left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的性别是？"
            android:textColor="@color/black_icon"
            android:textSize="@dimen/welcome_font_size"/>
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">
        <TableRow>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="40dp">
                <CheckBox
                    android:id="@+id/welcome2_man_cb"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:checked="true"
                    android:text="男"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/sexcheckbox_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="40dp">
                <CheckBox
                    android:id="@+id/welcome2_women_cb"
                    android:layout_centerInParent="true"
                    android:checked="false"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="女"
                    android:gravity="center"
                    android:button="@null"
                    android:textSize="25dp"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/sexcheckbox_bg"/>
            </RelativeLayout>

        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcome2_birthday_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的出生日期是？"
            android:textColor="@color/black_icon"
            android:textSize="@dimen/welcome_font_size"/>
        <TextView
            android:id="@+id/welcome2_birthdayicon_tv"
            android:layout_centerInParent="true"
            android:layout_below="@id/welcome2_birthday_tv"
            android:layout_marginTop="50dp"
            android:textSize="@dimen/welcome_font_size"
            android:gravity="center"
            android:text="1990年12月31日"
            android:textColor="@color/black_icon"
            android:maxLines="1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black_icon"
            android:layout_marginTop="3dp"
            android:layout_below="@id/welcome2_birthdayicon_tv"
            android:layout_alignLeft="@id/welcome2_birthdayicon_tv"
            android:layout_alignRight="@id/welcome2_birthdayicon_tv"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/welcome2_next_rl"
            android:layout_alignParentBottom="true"
            android:background="#57505F"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一步"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>