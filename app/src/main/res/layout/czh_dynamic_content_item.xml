<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <com.example.fitools.jiangshengda.CircleImageView
            android:id="@+id/user_header"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/mitao" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Left"
                android:textColor="@color/black_icon"
                android:textSize="@dimen/bmidtext_size"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="一天前"
                android:textColor="@color/gray_word"
                android:textSize="@dimen/msmalltext_size"
                android:paddingTop="1dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加关注"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sy_shape_dynamic"
                android:textColor="@color/yellow_icon"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:textSize="14dp"/>
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/find_img1"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天下雨了，我还要继续坚持减肥啊啊，因为瘦下去才能美美哒对不对。所以小仙女们要和我一起加油哦，，，一起变得美美哒！！！~"
        android:textColor="@color/black_icon"
        android:textSize="@dimen/bmidtext_size"
        android:layout_margin="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sgray_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp">
        <ImageView
            android:id="@+id/icon_comment"
            android:layout_width="@dimen/dynamic_icon_height"
            android:layout_height="@dimen/dynamic_icon_height"
            android:src="@mipmap/icon_comment"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/comment_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@color/gray_word"
            android:textSize="@dimen/midtext_size"
            android:paddingLeft="5dp"/>
        <ImageView
            android:id="@+id/icon_zan"
            android:layout_width="@dimen/dynamic_icon_height"
            android:layout_height="@dimen/dynamic_icon_height"
            android:src="@mipmap/icon_zan"/>
        <TextView
            android:id="@+id/zan_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@color/gray_word"
            android:textSize="@dimen/midtext_size"
            android:paddingLeft="5dp"/>
        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="@dimen/dynamic_icon_height"
            android:layout_height="@dimen/dynamic_icon_height"
            android:src="@mipmap/icon_share"/>

    </LinearLayout>

</LinearLayout>
