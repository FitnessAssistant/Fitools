<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/jsd_signin_return_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/turn_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black_icon"
            android:text="用户注册"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="账号"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="请输入手机号/邮箱"
                        android:background="@null"
                        android:textColor="@color/gray_word"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="验证码"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="3">
                    <EditText
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请输入验证码"
                        android:background="@null"
                        android:textColor="@color/gray_word"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="2">
                    <Button
                        android:layout_centerVertical="true"
                        android:background="@drawable/jsd_shape_white"
                        android:layout_width="100dp"
                        android:text="获取验证码"
                        android:textColor="@color/gray_word"
                        android:layout_height="35dp" />
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/jsd_register_bottom_line"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="密码"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请输入密码（至少6位）"
                        android:background="@null"
                        android:textColor="@color/gray_word"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/passwd_visible"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/jsd_signin_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="注册"
            android:textSize="17dp"
            android:background="#78727E"
            android:textColor="@color/gray_word"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/jsd_register_newuser_signup"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示同意服务条款和隐私条款"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:textColor="@color/gray_word"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/jsd_register_bottom_line"></RelativeLayout>
        <TextView
            android:textSize="16dp"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  其他方式登录  "/>
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/qq_logo"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/wechat_logo"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>