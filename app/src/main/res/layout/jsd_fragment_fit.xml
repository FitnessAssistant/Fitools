<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.fitools.jiangshengda.FitFragment">


    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></RelativeLayout>
        <RelativeLayout
            android:id="@+id/exercise_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/exercise_bottomline"
                android:layout_width="25dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/shape_fit_topline"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练"
                android:layout_centerInParent="true"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/run_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_marginBottom="2dp"

                android:id="@+id/run_bottomline"
                android:layout_width="25dp"
                android:background="@drawable/shape_fit_topline"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跑步"
                android:layout_centerInParent="true"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/search"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/Sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.gc.flashview.FlashView
               android:id="@+id/fit_banner_fv"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               app:effect="cube">
           </com.gc.flashview.FlashView>
           <RelativeLayout
               android:layout_marginTop="30dp"
               android:layout_width="match_parent"
               android:background="@drawable/shape_fit_options"
               android:layout_height="35dp">
               <TextView
                   android:textSize="12dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的训练"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"/>
           </RelativeLayout>
           <com.example.fitools.jiangshengda.ListViewForScrollView
               android:id="@+id/Lv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
           </com.example.fitools.jiangshengda.ListViewForScrollView>

           

           <RelativeLayout
               android:layout_marginTop="35dp"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:background="@mipmap/showmore">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#000000"
                   android:alpha="0.6">
               </RelativeLayout>
           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TableRow
                   android:layout_width="match_parent"
                   android:layout_weight="1"></TableRow>
               <TableRow
                   android:layout_width="match_parent"
                   android:layout_weight="1">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="发现更多训练"
                           android:textStyle="bold"
                           android:textSize="32dp"
                           android:layout_marginLeft="30dp"
                           android:layout_centerVertical="true"
                           android:textColor="@color/white"/>
                   </RelativeLayout>
               </TableRow>
               <TableRow
                   android:layout_width="match_parent"
                   android:layout_weight="1">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <Button
                           android:id="@+id/fit_checkexcerice"
                           android:layout_width="110dp"
                           android:layout_marginLeft="35dp"
                           android:layout_height="40dp"
                           android:layout_centerVertical="true"
                           android:text="查看训练"
                           android:background="@drawable/shape" />
                   </RelativeLayout>
               </TableRow>
               <TableRow
                   android:layout_width="match_parent"
                   android:layout_weight="1"></TableRow>
           </TableLayout>


           </RelativeLayout>
       </LinearLayout>
    </ScrollView>
</LinearLayout>
