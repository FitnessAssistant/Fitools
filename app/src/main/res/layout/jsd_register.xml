<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black_icon"
            android:text="用户登录"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="账号"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/register_account_et"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入手机号/邮箱"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/jsd_register_bottom_line"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="密码"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/register_password_et"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:hint="请输入密码（至少6位）"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/register_passward_cb"
                        android:checked="false"
                        android:layout_centerInParent="true"
                        android:layout_width="23dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/sy_passwordeye_bg"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/register_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="登录"
            android:textSize="17dp"
            android:background="@color/sblack"
            android:textColor="@color/gray_word"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/jsd_register_newuser_signup"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black_icon"/>
        <TextView
            android:id="@+id/jsd_register_forgetpasswd"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="@color/black_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/register_three_tl"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="32dp"
                        android:layout_height="28dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/wechat_logo"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/qq_logo"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="32dp"
                        android:layout_height="28dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/weibo_logo"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/register_three_tl">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/jsd_register_bottom_line"></RelativeLayout>
            <TextView
                android:textSize="16dp"
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  其他方式登录  "/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>