<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modena"
    tools:context=".jiangshengda.RunningActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/actionModeShareDrawable"
            android:layout_toLeftOf="@+id/textView"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="67dp"
            android:layout_height="23dp"
            android:text="跑步中"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/run_music"
            tools:layout_editor_absoluteY="25dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="100dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千卡"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目标100Kcal"
            android:textColor="@color/gray_word"
            android:textSize="20dp"
             />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/gray_word"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0%"
            android:textColor="@color/gray_word"
            android:textSize="20dp"
            />
    </LinearLayout>




    <TableLayout
        android:layout_width="395dp"
        android:layout_height="73dp">

        <TableRow
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/gray_word" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/run_maps" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/gray_word" />
            </RelativeLayout>

        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_marginTop="0dp">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />
            </RelativeLayout>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟/公里"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="461dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用时"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="461dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公里"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="321dp"
                    tools:layout_editor_absoluteY="461dp"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="50dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:layout_centerInParent="true"
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_circle_green"
                    android:text="继续"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="524dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/button2"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_circle_light_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="524dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_marginBottom="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="I I"
                        android:textColor="@color/modena"
                        android:textSize="40dp" />
                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="暂停"
                        android:textColor="@color/modena"
                        android:textSize="20dp" />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/button4"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_circle_red"
                    android:text="结束"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="285dp"
                    tools:layout_editor_absoluteY="524dp" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>