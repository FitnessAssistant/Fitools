<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/jsd_forgetpasswd_return_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/turn_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black_icon"
            android:text="忘记密码"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="账号"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/forgetpasswd_account_et"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入手机号/邮箱"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="验证码"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="3">
                    <EditText
                        android:id="@+id/forgetpasswd_identify_et"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入验证码"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/forgetpasswd_identifycode_bt"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/jsd_shape_white"
                        android:layout_width="100dp"
                        android:text="获取验证码"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textColor="@color/gray_word"
                        android:layout_height="35dp" />
                    <com.example.fitools.shenyue.CountdownTextView
                        android:id="@+id/forgetpasswd_identifytimer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_alignTop="@id/forgetpasswd_identifycode_bt"
                        android:layout_alignLeft="@id/forgetpasswd_identifycode_bt"
                        android:layout_alignBottom="@id/forgetpasswd_identifycode_bt"
                        android:layout_alignRight="@id/forgetpasswd_identifycode_bt"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/gray_word"
                        android:background="@drawable/sy_signup_identifytv_bg"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/jsd_register_bottom_line"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="新密码"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/forgetpasswd_password_et"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入密码（至少6位）"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/forgetpasswd_password_cb"
                        android:checked="false"
                        android:layout_centerInParent="true"
                        android:layout_width="23dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/sy_passwordeye_bg"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/forgetpasswd_ok_bt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="确定"
            android:textSize="17dp"
            android:background="#78727E"
            android:textColor="@color/gray_word"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</LinearLayout>