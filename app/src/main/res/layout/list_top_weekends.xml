<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <com.example.fitools.View.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/top_weekends_circleimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/welcome_icon"/>
            <TextView
                android:textColor="@color/black_icon"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/top_weekends_circleimg"
                android:id="@+id/top_weekends_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱锻炼的黄油面包干"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/top_runmiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/yellow_top_num"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_runmiles"
                android:textColor="@color/black_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>