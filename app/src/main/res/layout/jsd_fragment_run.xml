<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/run_xml"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/run_bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/run_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/run_map_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/run_maps"/>
                <ImageView
                    android:id="@+id/run_music_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/run_music"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.gc.flashview.FlashView
                    android:id="@+id/run_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:effect="cube">
                </com.gc.flashview.FlashView>
            </RelativeLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="——"
                        android:textColor="@color/white"
                        android:textSize="35dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textColor="@color/white"
                        android:textSize="35dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="35dp"/>
                </RelativeLayout>
            </TableRow>
                <TableRow>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分钟/公里"
                            android:textColor="@color/white"
                            android:textSize="17dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用时"
                            android:textColor="@color/white"
                            android:textSize="17dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="千卡"
                            android:textColor="@color/white"
                            android:textSize="17dp"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <RelativeLayout
                    android:id="@+id/start_run_rl"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/run_startrun_img"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape"
                        android:alpha="0.5"
                        android:layout_width="300dp"
                        android:layout_height="60dp" />
                    <TextView
                        android:id="@+id/run_startrun_text"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始跑步"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/run_startrun_text"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/run_run"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="150dp"
                    android:id="@+id/run_down_white_img"
                    android:layout_alignParentBottom="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/run_bottom_white"/>
                <TextView
                    android:layout_toRightOf="@id/run_down_white_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滑动查看更多"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>