<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/jsd_signup_return_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/turn_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black_icon"
            android:text="用户注册"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="账号"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/signup_account_et"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入手机号/邮箱"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/jsd_register_bottom_line">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="验证码"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="3">
                    <EditText
                        android:id="@+id/signup_identify_et"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入验证码"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/signup_identifycode_bt"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/jsd_shape_white"
                        android:layout_width="100dp"
                        android:text="获取验证码"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textColor="@color/gray_word"
                        android:layout_height="35dp" />
                    <com.example.fitools.shenyue.CountdownTextView
                        android:id="@+id/signup_identifytimer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_alignTop="@id/signup_identifycode_bt"
                        android:layout_alignLeft="@id/signup_identifycode_bt"
                        android:layout_alignBottom="@id/signup_identifycode_bt"
                        android:layout_alignRight="@id/signup_identifycode_bt"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/gray_word"
                        android:background="@drawable/sy_signup_identifytv_bg"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/jsd_register_bottom_line"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_height="50dp"
                    android:layout_width="0dip"
                    android:layout_weight="1">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="密码"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/signup_passward_et"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入密码（至少6位）"
                        android:textCursorDrawable="@drawable/sy_login_cursor_bg"
                        android:maxLines="1"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/black_icon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/signup_passward_cb"
                        android:checked="false"
                        android:layout_centerInParent="true"
                        android:layout_width="23dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/sy_passwordeye_bg"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/signup_sign_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="注册"
            android:textSize="17dp"
            android:background="#78727E"
            android:textColor="@color/gray_word"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/jsd_register_newuser_signup"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示同意服务条款和隐私条款"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:textColor="@color/gray_word"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/signup_three_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">
            <TableRow>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/signup_qq"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/signup_weixin"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_above="@id/signup_three_tl"
            android:layout_height="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/jsd_register_bottom_line"></RelativeLayout>
            <TextView
                android:textSize="16dp"
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  其他方式登录  "/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>