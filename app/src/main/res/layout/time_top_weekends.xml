<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <com.example.fitools.View.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/time_top_weekends_circleimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/welcome_icon"/>
            <TextView
                android:textColor="@color/black_icon"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/time_top_weekends_circleimg"
                android:id="@+id/time_top_weekends_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱锻炼的黄油面包干"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/time_top_runmiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/yellow_top_num"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/time_top_runmiles"
                android:textColor="@color/black_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_view_bottom_line_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每周一重新计算排名"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>